---
const lang = 'ca';

import Layout from "@/layouts/Layout.astro";

import { aboutTranslations } from "@/i18n/aboutTranslations";
const AboutTranslations = aboutTranslations[lang]

import InnerTitle from "@/sections/innerTitle.astro";
import TextImageSection from "@/sections/textImageSection.astro";
import Skills from "@/sections/skills.astro";
---
<Layout title={AboutTranslations['metaTitle']} description={AboutTranslations['metaDescription']} lang={lang}>
    <InnerTitle title={AboutTranslations['title']} 
    path={[
        { name: AboutTranslations['pathNames'][0], href: '/' },
        { name: AboutTranslations['pathNames'][1], href: '/about-me' },
    ]}/>
    <TextImageSection 
        subtitle={AboutTranslations['subtitle']} 
        content={AboutTranslations['content']}
        image={{
            src: '/images/pau-segues.webp',
            alt: AboutTranslations['subtitle']
        }}
    />
    <Skills sectionTitle={AboutTranslations['skillsTitle']} />
</Layout>