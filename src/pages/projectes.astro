---
const lang = 'ca';

import Layout from "@/layouts/Layout.astro";

import { projectsTranslations } from "@/i18n/projectsTranslations";
const ProjectsTranslations = projectsTranslations[lang]

import InnerTitle from "@/sections/innerTitle.astro";
import FullProjectsList from "@/sections/fullProjectsList.astro";
---
<Layout title={ProjectsTranslations['metaTitle']} description={ProjectsTranslations['metaDescription']} lang={lang}>
    <InnerTitle 
    title={ProjectsTranslations['title']} 
    path={[
        { name: ProjectsTranslations['pathNames'][0], href: '/' },
        { name: ProjectsTranslations['pathNames'][1], href: '/projects' },
    ]}/>
    <FullProjectsList title={ProjectsTranslations['subtitle']} buttonText={ProjectsTranslations['buttonText']} projects={ProjectsTranslations['projects']}/>
</Layout>