---
import { indexTranslations } from '@/i18n/indexTranslations';
const IndexTranslationsES = indexTranslations['es']

import LayoutES from '@/layouts/LayoutES.astro';

import Hero from '@/sections/hero.astro';
import AboutSummary from '@/sections/aboutSummary.astro';
import LastsProjects from '@/sections/lastsProjects.astro';
---

<LayoutES title={IndexTranslationsES['pageTitle']} description={IndexTranslationsES['pageDescription']}>
	<Hero subtitle={IndexTranslationsES['HeroSubtitle']}/>
	<LastsProjects 
		lang="es" 
		title={IndexTranslationsES['LastsProjectsTitle']} 
		buttonText={IndexTranslationsES['LastsProjectsButtonText']}
	/>
	<AboutSummary 
		Title={IndexTranslationsES['AboutTitle']} 
		AboutText= {IndexTranslationsES['AboutText']} 
	/>
</LayoutES>