---
import { indexTranslations } from '@/i18n/indexTranslations';
const IndexTranslations = indexTranslations['es']

import Layout from '@/layouts/LayoutES.astro';

import Hero from '@/sections/index/hero.astro';
import AboutSummary from '@/sections/index/aboutSummary.astro';
import LastsProjects from '@/sections/index/lastsProjects.astro';
---

<Layout title={IndexTranslations['metaTitle']} description={IndexTranslations['metaDescription']}>
	<Hero subtitle={IndexTranslations['HeroSubtitle']}/>
	<LastsProjects 
		lang="es" 
		title={IndexTranslations['LastsProjectsTitle']} 
		buttonText={IndexTranslations['LastsProjectsButtonText']}
	/>
	<AboutSummary 
		Title={IndexTranslations['AboutTitle']} 
		AboutText= {IndexTranslations['AboutText']} 
	/>
</Layout>