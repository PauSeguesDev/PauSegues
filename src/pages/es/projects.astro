---
import Layout from "@/layouts/LayoutES.astro";

import { projectsTranslations } from "@/i18n/projectsTranslations";
const ProjectsTranslations = projectsTranslations['es']

import InnerTitle from "@/sections/innerTitle.astro";
import FullProjectsList from "@/sections/fullProjectsList.astro";
---
<Layout title={ProjectsTranslations['metaTitle']} description={ProjectsTranslations['metaDescription']}>
    <InnerTitle 
        title={ProjectsTranslations['title']} 
        path={[
            { name: ProjectsTranslations['pathNames'][0], href: '/' },
            { name: ProjectsTranslations['pathNames'][1], href: '/projects' },
        ]}
    />
    <FullProjectsList lang={'es'} title={ProjectsTranslations['subtitle']} buttonText={ProjectsTranslations['buttonText']}/>
</Layout>