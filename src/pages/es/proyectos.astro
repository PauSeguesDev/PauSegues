---
const lang = "es";

import Layout from "@/layouts/Layout.astro";

import { projectsTranslations } from "@/i18n/projectsTranslations";
const ProjectsTranslations = projectsTranslations[lang];

import InnerTitle from "@/sections/innerTitle.astro";
import ProjectsList from "@/sections/projectsList.astro";
---

<Layout
    title={ProjectsTranslations["metaTitle"]}
    description={ProjectsTranslations["metaDescription"]}
    lang={lang}
>
    <InnerTitle
        title={ProjectsTranslations["title"]}
        path={[
            { name: ProjectsTranslations["pathNames"][0], href: "/" },
            { name: ProjectsTranslations["pathNames"][1], href: "/projects" },
        ]}
    />
    <ProjectsList
        title={ProjectsTranslations["subtitle"]}
        projects={ProjectsTranslations["projects"]}
    />
</Layout>
