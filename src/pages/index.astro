---
import { indexTranslations } from '@/i18n/indexTranslations';
const IndexTranslationsCA = indexTranslations['ca']

import LayoutCA from '@/layouts/Layout.astro';

import Hero from '@/sections/hero.astro';
import AboutSummary from '@/sections/aboutSummary.astro';
---

<LayoutCA title={IndexTranslationsCA['pageTitle']} description={IndexTranslationsCA['pageDescription']}>
	<Hero subtitle={IndexTranslationsCA['HeroSubtitle']}/>
	<AboutSummary 
		Title={IndexTranslationsCA['AboutTitle']} 
		AboutText= {IndexTranslationsCA['AboutText']} 
	/>
</LayoutCA>