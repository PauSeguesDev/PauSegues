---
const lang = "en";

import { indexTranslations } from "@/i18n/indexTranslations";
const IndexTranslations = indexTranslations[lang];

import { projectsTranslations } from "@/i18n/projectsTranslations";
const ProjectsTranslations = projectsTranslations[lang];

import Layout from "@/layouts/Layout.astro";

import Hero from "@/sections/index/hero.astro";
import AboutSummary from "@/sections/index/aboutSummary.astro";
import ProjectsList from "@/sections/projectsList.astro";
---

<Layout
	title={IndexTranslations["metaTitle"]}
	description={IndexTranslations["metaDescription"]}
	lang={lang}
>
	<Hero subtitles={IndexTranslations["HeroSubtitles"]} />
	<AboutSummary
		ButtonText={IndexTranslations["AboutButton"]}
		AboutText={IndexTranslations["AboutText"]}
		lang={lang}
	/>
	<ProjectsList
		title={IndexTranslations["LastsProjectsTitle"]}
		projects={ProjectsTranslations["projects"]}
		limit={3}
	/>
</Layout>
