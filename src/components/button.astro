---
interface Props {
    Text: string,
    Link: string,
}
const { Text, Link } = Astro.props
---
<a href={Link}
   class="bg-web-dark-blue text-white text-lg font-medium px-5 py-2 rounded-xl border-2 border-web-grey 
          shadow-md hover:shadow-lg hover:-translate-y-1 hover:scale-105 
          hover:bg-web-pearl-blue transition-all duration-300 ease-out">
    { Text }
</a>