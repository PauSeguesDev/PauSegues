---
interface Props {
    title: string;
    skills: { name: string; icon_url: string }[];
}

const { title, skills } = Astro.props;
---
<div class="bg-web-dark-blue rounded-xl overflow-hidden">
    <div class="relative flex items-center justify-end py-1 bg-web-pearl-blue">
        <div class="absolute left-4 flex gap-1">
            <span class="h-3 w-3 bg-red-500 hover:bg-red-600 rounded-full transition-colors"></span>
            <span class="h-3 w-3 bg-yellow-500 hover:bg-yellow-600 rounded-full transition-colors"></span>
            <span class="h-3 w-3 bg-green-500 hover:bg-green-600 rounded-full transition-colors"></span>
        </div>
        <h2 class="font-bold text-lg mr-4">{title}</h2>
    </div>
    <div class="p-8 grid grid-cols-3 gap-y-8 gap-x-4">
        {skills.map((skill: { name: string; icon_url: string }) => (
            <div class="flex flex-col items-center hover:scale-110 transition-all duration-300 space-y-2">
                <img 
                    src={skill.icon_url} 
                    alt={skill.name} 
                    width={60} 
                    height={60}
                />
                <p>{skill.name}</p>
            </div>
        ))}
    </div>
</div>