---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { title, description, image, link } = Astro.props;
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative flex flex-col justify-between h-full bg-web-night-blue/50 backdrop-blur-sm border border-web-pearl-blue/20 rounded-2xl shadow-lg
        overflow-hidden transition-all duration-300 hover:shadow-web-pearl-blue/20 hover:shadow-2xl hover:-translate-y-2 w-full max-w-sm mx-auto block"
>
    <!-- Image Area -->
    <div
        class="relative w-full h-48 sm:h-56 overflow-hidden bg-web-dark-blue/30"
    >
        <div
            class="absolute inset-0 linear-gradient-to-t from-web-night-blue via-transparent to-transparent opacity-60 z-10"
        >
        </div>
        <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        />
    </div>

    <!-- Content -->
    <div class="flex flex-col grow p-6 relative z-20">
        <h3
            class="text-xl sm:text-2xl font-bold text-white mb-3 group-hover:text-web-pearl-blue transition-colors duration-300"
        >
            {title}
        </h3>
        <p class="text-sm sm:text-base text-gray-300 leading-relaxed mb-6 grow">
            {description}
        </p>
    </div>
</a>
