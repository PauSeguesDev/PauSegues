---
interface Props {
	title: string;
	description: string;
	lang: 'ca' | 'es' | 'en';
}

const { title, description, lang } = Astro.props;

import "@/styles/global.css";

import { LayoutTranslations } from "@/i18n/layoutTranslations";
const LayoutTranslation = LayoutTranslations[lang]

import Header from "@/sections/global/header.astro";
import Footer from "@/sections/global/footer.astro";
import Loading from "@/components/loading.astro";
---
<!doctype html>
<html lang="ca">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Pau Segués" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Meta title and description -->
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="relative">
		<Loading />
		<div id="pageWrapper" class="opacity-0 transition-opacity duration-500">
			<Header 
				linksTexts={LayoutTranslation['headerLinkTexts']}
				linksHref={LayoutTranslation['headerLinksHref']}
			/>
			<main>
				<slot />
			</main>
			<Footer 
				legal={LayoutTranslation['footerLegal']}
				privacity={LayoutTranslation['footerPrivacity']}
				cookies={LayoutTranslation['footerCookies']}
				description={LayoutTranslation['description']}
				titleSocial={LayoutTranslation['titleSocial']}
			/>
		</div>
	</body>
</html>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    // Amaguem el loader
    const loader = document.querySelector("body > loading, #loading");
    if (loader) loader.style.display = "none";

    // Mostrem TOT el contingut (header + pàgina + footer)
    const page = document.getElementById("pageWrapper");
    if (page) page.classList.remove("opacity-0");
  });
</script>
