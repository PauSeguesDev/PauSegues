---
interface Props {
  SectionTranslation: { [key: string]: {title: string, description?: string, list?: string[]}};
}

const { SectionTranslation } = Astro.props;
---

<section class="px-4 sm:px-12 md:px-24 lg:px-64 py-4 mt-12 mb-4">
  <div class="flex flex-col gap-4">
    {
      Object.entries(SectionTranslation).map(([key, item]: [string, {title: string, description?: string, list?: string[]}]) => (
        <div>
          <h3 class="font-bold">{item.title}</h3>
          {item.list ? (
            <ul>
              {item.list.map((li: string) => (
                <li>{li}</li>
              ))}
            </ul>
          ) : (
            <p set:html={item.description}></p>
          )}
        </div>
      ))
    }
  </div>
</section>
