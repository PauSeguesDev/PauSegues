---
interface Props {
    title: string;
    path: { name: string, href: string }[];
}

const { title, path } = Astro.props;
---
<section class="w-full h-[30dvh] bg-grid-container">
    <div class="flex flex-col items-center justify-center align-middle h-full">
        <h1 class="text-5xl font-bold">
            {title}
        </h1>
        <div class="flex items-center space-x-4 pt-8">
            <ul class="flex items-center space-x-4">
                {path.map((item, index) => (
                    <>
                        <li>
                            {index === path.length - 1
                                ? <span class="text-web-pearl-blue">{item.name}</span>
                                : <a href={item.href} class="hover:underline">{item.name}</a>
                            }
                        </li>

                        {index < path.length - 1 && (
                            <li><span>/</span></li>
                        )}
                    </>
                ))}
            </ul>
        </div>
    </div>
</section>
