---
interface Props {
    ButtonText: string;
    AboutText: string;
    lang: string;
}
const { ButtonText, AboutText, lang } = Astro.props;

import { routes } from "@/i18n/routes";

import Button from "@/components/buttons/button.astro";
---

<section class="w-full py-12 px-4 sm:px-10 md:px-24 lg:px-36">
    <div
        class="flex flex-col md:flex-row justify-center items-center gap-10 md:gap-12"
    >
        <div class="shrink-0">
            <img
                src="/images/pau-segues.webp"
                alt="Pau SeguÃ©s Vitutia"
                class="w-[250px] sm:w-[300px] md:w-[350px] lg:w-[400px] h-auto rounded-2xl"
            />
        </div>
        <div>
            <p class="max-w-xl text-xl mb-8">
                {AboutText}
            </p>
            <div class="flex justify-center md:justify-start">
                <Button 
                    Text={ButtonText} 
                    Link={routes.about[lang as keyof typeof routes.about]} 
                />
            </div>
        </div>
    </div>
</section>
