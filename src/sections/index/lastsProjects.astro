---
interface Props {
  lang: "ca" | "es" | "en";
  title: string;
  buttonText: string;
}

const { lang, title, buttonText } = Astro.props;

import ProjectCard from "@/components/projectCard.astro";

import { projectsTranslations } from "@/i18n/projectsTranslations";
const ProjectsTranslations = projectsTranslations[lang];
const lastProjects = ProjectsTranslations?.projects?.slice(0, 3);
---

<section class="w-full py-24 px-4 sm:px-10 md:px-24 lg:px-36">
  <div class="flex justify-center items-center mb-6 md:mb-12">
    <h2 class="text-2xl lg:text-4xl font-bold">
      {title}
    </h2>
  </div>
  <div class="flex flex-col lg:flex-row justify-center items-start gap-8">
    {
      lastProjects?.map((project: any) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          image={project.image}
          link={project.url}
          buttonText={buttonText}
        />
      ))
    }
  </div>
</section>
