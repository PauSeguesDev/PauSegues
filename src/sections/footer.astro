---
import { SOCIAL } from "@/consts/social"

interface Props {
    description: string;
    titleSocial: string;

    legal: string[];
    privacity: string[];
    cookies: string[];
}

const { description, titleSocial, legal, privacity, cookies } = Astro.props
---
<footer class="bg-web-dark-blue">
    <div class="flex flex-col md:flex-row justify-center md:space-x-36 items-center pt-6 px-4 md:px-0 space-y-6 md:space-y-0">
        <div class="flex flex-col items-center space-y-2 w-full md:w-1/4 text-center md:text-left">
            <img src="/images/logo.webp" alt="Logo" class="w-24">
            <p>{ description }</p>
        </div>
        <div class="flex flex-col items-center space-y-2 w-full md:w-1/4">
            <h3 class="font-semibold text-lg">{ titleSocial }</h3>
            <ul class="flex flex-row space-x-2">
                {
                    SOCIAL.map((social) => (
                        <li class="flex items-center justify-center">
                            <a href={social.url} class="[&>svg]:hover:scale-110 [&>svg]:hover:transition-all [&>svg]:hover:duration-300 [&>svg]:hover:ease-out ">
                                <social.image.logo />
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>

    <hr class="my-4">

    <div class="flex flex-col md:flex-row justify-between items-center px-4 sm:px-12 md:px-24 lg:px-64 pb-4 space-y-2 md:space-y-0">
        <div>
            <p class="text-web-pearl-blue text-center md:text-left">&copy; {new Date().getFullYear()} Pau Segu√©s Vitutia. Tots els drets reservats.</p>
        </div>
        <div class="flex justify-center items-center space-x-6 [&>a]:hover:scale-110 [&>a]:hover:transition-all [&>a]:hover:duration-300">
            <a href={legal[1]}>{legal[0]}</a>
            <a href={privacity[1]}>{privacity[0]}</a>
            <a href={cookies[1]}>{cookies[0]}</a>
        </div>
    </div>
</footer>